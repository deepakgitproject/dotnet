@model lpu_application.Models.Student
@{
    ViewData["Title"] = "Edit Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LPU - Edit Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460);
            min-height: 100vh;
            padding: 20px;
        }

        .top-bar {
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(10px);
            border-bottom: 2px solid #FFD700;
            padding: 12px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: -20px -20px 30px -20px;
        }

            .top-bar .brand {
                color: #FFD700;
                font-weight: 800;
                font-size: 20px;
            }

            .top-bar a {
                color: #ccc;
                text-decoration: none;
                font-size: 13px;
            }

                .top-bar a:hover {
                    color: #FFD700;
                }

        .form-container {
            max-width: 850px;
            margin: 0 auto;
            background: rgba(255,255,255,0.07);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,215,0,0.2);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.4);
        }

        .form-header {
            text-align: center;
            margin-bottom: 35px;
        }

            .form-header .icon {
                width: 70px;
                height: 70px;
                background: linear-gradient(135deg, #FFD700, #FFA500);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto 15px;
                font-size: 28px;
                border: 3px solid #fff;
            }

            .form-header h2 {
                color: #FFD700;
                font-size: 24px;
                font-weight: 700;
            }

            .form-header p {
                color: #aaa;
                font-size: 13px;
            }

        .reg-badge {
            background: linear-gradient(135deg, #6A0DAD, #9B59B6);
            color: #FFD700;
            padding: 6px 18px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
            margin-top: 8px;
            letter-spacing: 1px;
        }

        .section-title {
            color: #FFD700;
            font-size: 13px;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
            border-bottom: 1px solid rgba(255,215,0,0.3);
            padding-bottom: 8px;
            margin: 25px 0 18px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 5px;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

        label {
            color: #ccc;
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 6px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .input-wrap {
            position: relative;
        }

            .input-wrap i {
                position: absolute;
                left: 14px;
                top: 50%;
                transform: translateY(-50%);
                color: #FFD700;
                font-size: 14px;
            }

        input, select, textarea {
            width: 100%;
            padding: 12px 14px 12px 40px;
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 10px;
            color: #fff;
            font-size: 14px;
            font-family: 'Poppins', sans-serif;
            transition: border 0.3s;
        }

            input:focus, select:focus, textarea:focus {
                outline: none;
                border-color: #FFD700;
                background: rgba(255,215,0,0.05);
            }

            select option {
                background: #1a1a2e;
                color: #fff;
            }

        textarea {
            padding-left: 40px;
            resize: vertical;
            min-height: 80px;
        }

        .text-danger {
            color: #ff6b6b;
            font-size: 11px;
            margin-top: 4px;
        }

        /* Current Photo Preview */
        .current-photo-wrap {
            display: flex;
            align-items: center;
            gap: 20px;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,215,0,0.2);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 15px;
        }

        .current-photo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #FFD700;
        }

        .current-photo-placeholder {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6A0DAD, #9B59B6);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 30px;
            border: 3px solid #FFD700;
        }

        .photo-info p {
            color: #aaa;
            font-size: 12px;
        }

        .photo-info span {
            color: #FFD700;
            font-size: 11px;
        }

        .photo-upload-area {
            border: 2px dashed rgba(255,215,0,0.4);
            border-radius: 12px;
            padding: 18px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            .photo-upload-area:hover {
                border-color: #FFD700;
                background: rgba(255,215,0,0.05);
            }

            .photo-upload-area p {
                color: #aaa;
                font-size: 12px;
                margin-top: 6px;
            }

            .photo-upload-area i {
                color: #FFD700;
                font-size: 24px;
            }

        #PhotoFile {
            display: none;
        }

        .new-preview {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #00c864;
            display: none;
            margin: 8px auto 0;
        }

        /* Buttons */
        .btn-row {
            display: flex;
            gap: 12px;
            margin-top: 30px;
        }

        .btn-update {
            flex: 1;
            padding: 14px;
            background: linear-gradient(135deg, #FFD700, #FFA500);
            color: #1a1a2e;
            border: none;
            border-radius: 50px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-update:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(255,215,0,0.5);
            }

        .btn-back {
            padding: 14px 28px;
            background: rgba(255,255,255,0.08);
            color: #ccc;
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 50px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background: rgba(255,255,255,0.15);
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="top-bar">
        <span class="brand">🎓 LPU UNIVERSITY</span>
        <a href="/Student/Dashboard"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
    </div>

    <div class="form-container">
        <div class="form-header">
            <div class="icon">✏️</div>
            <h2>EDIT YOUR PROFILE</h2>
            <p>Update your personal and academic information</p>
            <div class="reg-badge">🎫 @Model.RegistrationNo</div>
        </div>

        <form asp-action="Edit" asp-controller="Student" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="RegistrationNo" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Password" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="PhotoPath" />

            <!-- PERSONAL INFO -->
            <div class="section-title"><i class="fas fa-user"></i> Personal Information</div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <div class="input-wrap">
                        <i class="fas fa-user"></i>
                        <input asp-for="FirstName" placeholder="First name" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <div class="input-wrap">
                        <i class="fas fa-user"></i>
                        <input asp-for="LastName" placeholder="Last name" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth"></label>
                    <div class="input-wrap">
                        <i class="fas fa-calendar"></i>
                        <input asp-for="DateOfBirth" type="date" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <div class="input-wrap">
                        <i class="fas fa-venus-mars"></i>
                        <select asp-for="Gender">
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- CONTACT INFO -->
            <div class="section-title"><i class="fas fa-phone"></i> Contact Information</div>
            <div class="form-row">
                <div class="form-group">
                    <label>Email Address (Cannot be changed)</label>
                    <div class="input-wrap">
                        <i class="fas fa-envelope"></i>
                        <input type="email" value="@Model.Email" disabled
                               style="opacity:0.5; cursor:not-allowed;" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <div class="input-wrap">
                        <i class="fas fa-phone"></i>
                        <input asp-for="Phone" placeholder="Phone number" />
                    </div>
                </div>
                <div class="form-group full-width">
                    <label asp-for="Address"></label>
                    <div class="input-wrap">
                        <i class="fas fa-map-marker-alt"></i>
                        <textarea asp-for="Address" placeholder="Full address"></textarea>
                    </div>
                </div>
            </div>

            <!-- ACADEMIC INFO -->
            <div class="section-title"><i class="fas fa-graduation-cap"></i> Academic Information</div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Course"></label>
                    <div class="input-wrap">
                        <i class="fas fa-book"></i>
                        <select asp-for="Course">
                            <option value="">-- Select Course --</option>
                            <option value="B.Tech">B.Tech</option>
                            <option value="MBA">MBA</option>
                            <option value="BCA">BCA</option>
                            <option value="MCA">MCA</option>
                            <option value="B.Sc">B.Sc</option>
                            <option value="B.Com">B.Com</option>
                            <option value="BBA">BBA</option>
                            <option value="M.Tech">M.Tech</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Branch"></label>
                    <div class="input-wrap">
                        <i class="fas fa-code-branch"></i>
                        <select asp-for="Branch">
                            <option value="">-- Select Branch --</option>
                            <option value="Computer Science">Computer Science</option>
                            <option value="Information Technology">Information Technology</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Mechanical">Mechanical</option>
                            <option value="Civil">Civil</option>
                            <option value="Finance">Finance</option>
                            <option value="Marketing">Marketing</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- PHOTO UPDATE -->
            <div class="section-title"><i class="fas fa-camera"></i> Update Profile Photo</div>

            <div class="current-photo-wrap">
                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                {
                    <img src="@Model.PhotoPath" class="current-photo" alt="Current Photo" />
                }
                else
                {
                    <div class="current-photo-placeholder">👤</div>
                }
                <div class="photo-info">
                    <p><b style="color:#fff;">Current Photo</b></p>
                    <span>Upload a new photo below to replace it</span>
                </div>
            </div>

            <div class="photo-upload-area" onclick="document.getElementById('PhotoFile').click()">
                <i class="fas fa-cloud-upload-alt"></i>
                <p id="uploadText">Click to upload new photo (optional)</p>
                <img id="newPreview" class="new-preview" src="#" alt="New Preview" />
                <input type="file" asp-for="PhotoFile" id="PhotoFile"
                       accept="image/*" onchange="previewNewPhoto(this)" />
            </div>

            <!-- BUTTONS -->
            <div class="btn-row">
                <a href="/Student/Dashboard" class="btn-back">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <button type="submit" class="btn-update">
                    <i class="fas fa-save"></i> SAVE CHANGES
                </button>
            </div>

        </form>
    </div>

    <script>
        function previewNewPhoto(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('newPreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    document.getElementById('uploadText').textContent = '✅ New photo selected!';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

</body>
</html>