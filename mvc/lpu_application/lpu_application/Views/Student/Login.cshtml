@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LPU - Student Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            background: rgba(255,255,255,0.07);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,215,0,0.3);
            border-radius: 24px;
            padding: 50px 45px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 30px 60px rgba(0,0,0,0.5);
        }

        .login-header {
            text-align: center;
            margin-bottom: 35px;
        }

        .login-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #6A0DAD, #9B59B6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 18px;
            font-size: 32px;
            border: 3px solid #FFD700;
        }

        .login-header h2 {
            color: #FFD700;
            font-size: 24px;
            font-weight: 700;
        }

        .login-header p {
            color: #aaa;
            font-size: 13px;
            margin-top: 5px;
        }

        .divider {
            height: 2px;
            background: linear-gradient(to right, transparent, #FFD700, transparent);
            margin: 20px 0 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: #ccc;
            font-size: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            display: block;
            margin-bottom: 8px;
        }

        .input-wrap {
            position: relative;
        }

            .input-wrap i {
                position: absolute;
                left: 14px;
                top: 50%;
                transform: translateY(-50%);
                color: #6A0DAD;
                font-size: 15px;
            }

        input {
            width: 100%;
            padding: 13px 14px 13px 42px;
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 12px;
            color: #fff;
            font-size: 14px;
            font-family: 'Poppins', sans-serif;
            transition: all 0.3s;
        }

            input:focus {
                outline: none;
                border-color: #FFD700;
                background: rgba(255,215,0,0.05);
            }

        .eye-toggle {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
            cursor: pointer;
            font-size: 14px;
        }

            .eye-toggle:hover {
                color: #FFD700;
            }

        .btn-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #6A0DAD, #9B59B6);
            color: #fff;
            border: none;
            border-radius: 50px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            margin-top: 10px;
            transition: all 0.3s;
            letter-spacing: 0.5px;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(106,13,173,0.5);
            }

        .register-link {
            text-align: center;
            margin-top: 20px;
            color: #aaa;
            font-size: 13px;
        }

            .register-link a {
                color: #FFD700;
                text-decoration: none;
                font-weight: 600;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }

        .back-link {
            text-align: center;
            margin-top: 12px;
        }

            .back-link a {
                color: #777;
                font-size: 12px;
                text-decoration: none;
            }

                .back-link a:hover {
                    color: #ccc;
                }

        .alert-danger {
            background: rgba(255,80,80,0.15);
            border: 1px solid #ff5050;
            color: #ff5050;
            padding: 12px 18px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 13px;
            text-align: center;
        }

        .alert-success {
            background: rgba(0,200,100,0.15);
            border: 1px solid #00c864;
            color: #00c864;
            padding: 12px 18px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 13px;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-header">
            <div class="login-icon">🔐</div>
            <h2>STUDENT LOGIN</h2>
            <p>Enter your credentials to access your portal</p>
        </div>

        <div class="divider"></div>

        @if (TempData["Error"] != null)
        {
            <div class="alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["Error"]</div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert-success"><i class="fas fa-check-circle"></i> @TempData["Success"]</div>
        }

        <form asp-action="Login" asp-controller="Student" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label><i class="fas fa-envelope"></i> Email Address</label>
                <div class="input-wrap">
                    <i class="fas fa-envelope"></i>
                    <input type="email" name="email" placeholder="Enter your email" required />
                </div>
            </div>

            <div class="form-group">
                <label><i class="fas fa-lock"></i> Password</label>
                <div class="input-wrap">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" id="passwordField" placeholder="Enter your password" required />
                    <span class="eye-toggle" onclick="togglePassword()">
                        <i class="fas fa-eye" id="eyeIcon"></i>
                    </span>
                </div>
            </div>

            <button type="submit" class="btn-login">
                <i class="fas fa-sign-in-alt"></i> LOGIN TO PORTAL
            </button>
        </form>

        <div class="register-link">
            New student? <a href="/Student/Register">Register Here</a>
        </div>

        <div class="back-link">
            <a href="/"><i class="fas fa-arrow-left"></i> Back to Home</a>
        </div>
    </div>

    <script>
        function togglePassword() {
            const field = document.getElementById('passwordField');
            const icon = document.getElementById('eyeIcon');
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }
    </script>

</body>
</html>