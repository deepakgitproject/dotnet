@model lpu_application.Models.Student
@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LPU - Student Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460);
            min-height: 100vh;
        }

        /* NAVBAR */
        .navbar {
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(10px);
            border-bottom: 2px solid #FFD700;
            padding: 12px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .navbar .brand {
                color: #FFD700;
                font-weight: 800;
                font-size: 20px;
            }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .nav-right span {
                color: #ccc;
                font-size: 13px;
            }

                .nav-right span b {
                    color: #FFD700;
                }

        .btn-logout {
            background: rgba(255,80,80,0.2);
            border: 1px solid #ff5050;
            color: #ff5050;
            padding: 7px 18px;
            border-radius: 50px;
            font-size: 12px;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s;
        }

            .btn-logout:hover {
                background: #ff5050;
                color: #fff;
            }

        /* MAIN CONTENT */
        .container {
            max-width: 1000px;
            margin: 30px auto;
            padding: 0 20px;
        }

        /* PROFILE CARD */
        .profile-card {
            background: rgba(255,255,255,0.07);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,215,0,0.3);
            border-radius: 20px;
            padding: 30px;
            display: flex;
            align-items: center;
            gap: 25px;
            margin-bottom: 25px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }

        .profile-photo {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #FFD700;
            flex-shrink: 0;
        }

        .profile-photo-placeholder {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6A0DAD, #9B59B6);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            border: 4px solid #FFD700;
            flex-shrink: 0;
        }

        .profile-info h2 {
            color: #FFD700;
            font-size: 22px;
            font-weight: 700;
        }

        .profile-info .reg-no {
            background: linear-gradient(135deg, #6A0DAD, #9B59B6);
            color: #FFD700;
            padding: 4px 14px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
            margin: 6px 0;
            letter-spacing: 1px;
        }

        .profile-info p {
            color: #aaa;
            font-size: 13px;
            margin-top: 4px;
        }

        /* ACTION BUTTONS */
        .action-buttons {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            margin-bottom: 25px;
        }

        .action-btn {
            padding: 12px 24px;
            border-radius: 12px;
            font-size: 13px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            cursor: pointer;
            border: none;
        }

        .btn-edit {
            background: linear-gradient(135deg, #FFD700, #FFA500);
            color: #1a1a2e;
        }

        .btn-idcard {
            background: linear-gradient(135deg, #6A0DAD, #9B59B6);
            color: #fff;
        }

        .btn-delete {
            background: rgba(255,80,80,0.15);
            border: 1px solid #ff5050;
            color: #ff5050;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }

        /* INFO GRID */
        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
            margin-bottom: 25px;
        }

        .info-card {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 14px;
            padding: 20px;
        }

            .info-card h4 {
                color: #FFD700;
                font-size: 12px;
                letter-spacing: 1px;
                text-transform: uppercase;
                margin-bottom: 14px;
                border-bottom: 1px solid rgba(255,215,0,0.2);
                padding-bottom: 8px;
            }

        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

            .info-row .key {
                color: #888;
                font-size: 12px;
            }

            .info-row .val {
                color: #fff;
                font-size: 13px;
                font-weight: 500;
            }

        /* SUCCESS/ERROR */
        .alert-success {
            background: rgba(0,200,100,0.15);
            border: 1px solid #00c864;
            color: #00c864;
            padding: 12px 18px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 13px;
        }

        /* MODAL */
        .modal-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.7);
            z-index: 999;
            align-items: center;
            justify-content: center;
        }

            .modal-overlay.active {
                display: flex;
            }

        .modal-box {
            background: #16213e;
            border: 1px solid rgba(255,80,80,0.4);
            border-radius: 20px;
            padding: 35px;
            text-align: center;
            max-width: 380px;
            width: 90%;
        }

            .modal-box h3 {
                color: #ff5050;
                font-size: 20px;
                margin-bottom: 10px;
            }

            .modal-box p {
                color: #aaa;
                font-size: 13px;
                margin-bottom: 25px;
            }

        .modal-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        .btn-confirm-delete {
            background: #ff5050;
            color: #fff;
            border: none;
            padding: 10px 25px;
            border-radius: 50px;
            cursor: pointer;
            font-weight: 600;
        }

        .btn-cancel {
            background: rgba(255,255,255,0.1);
            color: #fff;
            border: none;
            padding: 10px 25px;
            border-radius: 50px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar">
        <span class="brand">🎓 LPU STUDENT PORTAL</span>
        <div class="nav-right">
            <span>Welcome, <b>@Model.FirstName</b></span>
            <a href="/Student/Logout" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </nav>

    <!-- MAIN -->
    <div class="container">

        @if (TempData["Success"] != null)
        {
            <div class="alert-success"><i class="fas fa-check-circle"></i> @TempData["Success"]</div>
        }

        <!-- PROFILE CARD -->
        <div class="profile-card">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" class="profile-photo" alt="Student Photo" />
            }
            else
            {
                <div class="profile-photo-placeholder">👤</div>
            }
            <div class="profile-info">
                <h2>@Model.FirstName @Model.LastName</h2>
                <div class="reg-no">🎫 @Model.RegistrationNo</div>
                <p><i class="fas fa-envelope"></i> @Model.Email</p>
                <p><i class="fas fa-graduation-cap"></i> @Model.Course — @Model.Branch</p>
            </div>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="action-buttons">
            <a href="/Student/Edit/@Model.StudentId" class="action-btn btn-edit">
                <i class="fas fa-edit"></i> Edit Profile
            </a>
            <a href="/Student/IDCard/@Model.StudentId" class="action-btn btn-idcard">
                <i class="fas fa-id-card"></i> View ID Card
            </a>
            <button class="action-btn btn-delete" onclick="showDeleteModal()">
                <i class="fas fa-trash"></i> Delete Account
            </button>
        </div>

        <!-- INFO GRID -->
        <div class="info-grid">
            <div class="info-card">
                <h4><i class="fas fa-user"></i> Personal Details</h4>
                <div class="info-row">
                    <span class="key">Full Name</span>
                    <span class="val">@Model.FirstName @Model.LastName</span>
                </div>
                <div class="info-row">
                    <span class="key">Date of Birth</span>
                    <span class="val">@(Model.DateOfBirth?.ToString("dd MMM yyyy") ?? "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="key">Gender</span>
                    <span class="val">@(Model.Gender ?? "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="key">Phone</span>
                    <span class="val">@(Model.Phone ?? "N/A")</span>
                </div>
            </div>

            <div class="info-card">
                <h4><i class="fas fa-graduation-cap"></i> Academic Details</h4>
                <div class="info-row">
                    <span class="key">Registration No</span>
                    <span class="val">@Model.RegistrationNo</span>
                </div>
                <div class="info-row">
                    <span class="key">Course</span>
                    <span class="val">@(Model.Course ?? "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="key">Branch</span>
                    <span class="val">@(Model.Branch ?? "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="key">Joined</span>
                    <span class="val">@Model.CreatedAt.ToString("dd MMM yyyy")</span>
                </div>
            </div>

            <div class="info-card">
                <h4><i class="fas fa-map-marker-alt"></i> Address</h4>
                <div class="info-row">
                    <span class="val">@(Model.Address ?? "No address provided")</span>
                </div>
            </div>

            <div class="info-card">
                <h4><i class="fas fa-envelope"></i> Contact</h4>
                <div class="info-row">
                    <span class="key">Email</span>
                    <span class="val">@Model.Email</span>
                </div>
                <div class="info-row">
                    <span class="key">Phone</span>
                    <span class="val">@(Model.Phone ?? "N/A")</span>
                </div>
            </div>
        </div>
    </div>

    <!-- DELETE MODAL -->
    <div class="modal-overlay" id="deleteModal">
        <div class="modal-box">
            <h3>⚠️ Delete Account?</h3>
            <p>This action is permanent and cannot be undone. All your data will be deleted.</p>
            <div class="modal-buttons">
                <form asp-action="Delete" asp-controller="Student" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.StudentId" />
                    <button type="submit" class="btn-confirm-delete">Yes, Delete</button>
                </form>
                <button class="btn-cancel" onclick="hideDeleteModal()">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        function showDeleteModal() { document.getElementById('deleteModal').classList.add('active'); }
        function hideDeleteModal() { document.getElementById('deleteModal').classList.remove('active'); }
    </script>

</body>
</html>